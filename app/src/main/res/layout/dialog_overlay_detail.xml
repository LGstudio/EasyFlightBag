<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/backgroundDarkColor"
    android:padding="@dimen/row_padding"
    android:clipToPadding="false">

    <ImageButton
        android:id="@+id/detail_close"
        android:layout_width="match_parent"
        android:background="?attr/primaryColor"
        android:layout_height="wrap_content"
        android:padding="@dimen/row_padding"
        android:src="@drawable/ic_done"
        android:layout_alignParentBottom="true"
        android:elevation="@dimen/elevation_8"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@id/detail_close"
        android:layout_marginBottom="@dimen/row_padding"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/detail_lists"
            android:clipToPadding="false">

        </LinearLayout>

    </ScrollView>

</RelativeLayout>