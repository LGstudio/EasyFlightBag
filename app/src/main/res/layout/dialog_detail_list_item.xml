<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/row_padding"
    android:layout_centerVertical="true"
    android:background="?attr/backgroundColor"
    android:layout_marginBottom="@dimen/row_divider"
    android:gravity="center_vertical"
    android:clickable="true"
    android:elevation="@dimen/elevation_8">

    <TextView
        android:layout_width="@dimen/row_height"
        android:layout_height="@dimen/row_height"
        android:layout_alignParentStart="true"
        android:id="@+id/detail_icon"
        android:layout_centerVertical="true"
        android:textSize="@dimen/row_xsmall_text"
        android:maxLines="1"
        android:gravity="center"
        android:layout_marginEnd="@dimen/row_padding"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/detail_end_top"
        android:textColor="?attr/primaryTextColor"
        android:maxLines="1"
        android:layout_marginStart="@dimen/row_padding"
        android:layout_centerHorizontal="false"
        android:layout_centerVertical="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/detail_end_bottom"
        android:textColor="?attr/primaryTextColor"
        android:layout_below="@id/detail_end_top"
        android:maxLines="1"
        android:layout_marginStart="@dimen/row_padding"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detail_title"
        android:textColor="?attr/primaryTextColor"
        android:textSize="@dimen/row_medium_text"
        android:layout_toEndOf="@id/detail_icon"
        android:layout_toStartOf="@id/detail_end_top"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?attr/secondaryTextColor"
        android:id="@+id/detail_description"
        android:layout_below="@id/detail_title"
        android:layout_toEndOf="@id/detail_icon"
        android:maxLines="1"
        android:layout_toStartOf="@id/detail_end_bottom"/>


</RelativeLayout>