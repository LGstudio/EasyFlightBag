<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:weightSum="1"
              android:paddingTop="@dimen/tab_padding"
              android:paddingBottom="@dimen/tab_padding">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:orientation="vertical">
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <EditText
            android:id="@+id/calc_unit_text_c"
            style="@style/Calculator_edit_text_field"
            />

        <EditText
            android:id="@+id/calc_unit_text_f"
            style="@style/Calculator_edit_text_field"
            />

        <EditText
            android:id="@+id/calc_unit_text_k"
            style="@style/Calculator_edit_text_field"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:orientation="vertical">

        <TextView
            style="@style/Calculator_text_unit"
            android:text="@string/calc_unit_c"
            />

        <TextView
            style="@style/Calculator_text_unit"
            android:text="@string/calc_unit_f"
            />

        <TextView
            style="@style/Calculator_text_unit"
            android:text="@string/calc_unit_k"
            />


    </LinearLayout>


</LinearLayout>