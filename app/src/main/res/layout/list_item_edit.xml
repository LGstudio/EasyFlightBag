<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="?attr/backgroundColor"
    android:layout_height="wrap_content"
    android:padding="@dimen/row_padding_small"
    android:layout_margin="0dp"
    android:layout_centerVertical="true">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_clear_inv"
        android:id="@+id/list_edit_delete"
        android:layout_alignParentEnd="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_edit_text"
        android:textColor="?attr/primaryTextColor"
        android:gravity="center_vertical"
        android:textSize="@dimen/calc_text_size"
        android:layout_toStartOf="@id/list_edit_delete"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:textColorHighlight="?attr/backgroundColorHighlightLight"/>

</RelativeLayout>