<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    android:background="?attr/backgroundDarkColor">

    <ImageButton
        android:src="@drawable/ic_delete_inv"
        android:padding="@dimen/row_padding"
        android:layout_marginStart="@dimen/row_padding"
        android:background="?attr/backgroundColor"
        android:id="@+id/chk_airplane_delete"
        android:layout_width="@dimen/row_height"
        android:layout_height="@dimen/row_height"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/btn_delete"
        android:layout_marginTop="@dimen/row_padding"
        android:layout_marginEnd="@dimen/row_padding"
        android:elevation="@dimen/elevation_8"
        />

    <Spinner
        android:id="@+id/chk_airplane_spinner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/chk_airplane_delete"
        android:background="?attr/backgroundColor"
        android:layout_marginTop="@dimen/row_padding"
        android:layout_marginStart="@dimen/row_padding"
        android:elevation="@dimen/elevation_8"/>

    <ImageButton
        android:src="@drawable/ic_add_inv"
        android:padding="@dimen/row_padding"
        android:layout_marginStart="@dimen/row_padding"
        android:background="?attr/backgroundColor"
        android:id="@+id/chk_airplane_add"
        android:layout_width="@dimen/row_height"
        android:layout_height="@dimen/row_height"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/chk_airplane_delete"
        android:contentDescription="@string/btn_delete"
        android:layout_marginTop="@dimen/row_height"
        android:layout_marginEnd="@dimen/row_padding"
        android:elevation="@dimen/elevation_8"/>

    <EditText
        android:id="@+id/chk_airplane_new"
        android:layout_marginTop="@dimen/row_height"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height"
        android:background="?attr/backgroundColor"
        android:textColor="?attr/primaryTextColor"
        android:textColorHint="?attr/fadedTextColor"
        android:hint="@string/chk_add_airplane"
        android:layout_below="@+id/chk_airplane_spinner"
        android:layout_alignStart="@+id/chk_airplane_spinner"
        android:layout_toStartOf="@id/chk_airplane_add"
        android:textCursorDrawable="@null"
        android:textColorHighlight="?attr/backgroundColorHighlightLight"
        android:elevation="@dimen/elevation_8"
        android:padding="@dimen/row_padding"/>

    <ImageButton
        android:id="@+id/chk_airplane_done"
        android:layout_width="match_parent"
        android:background="?attr/primaryColor"
        android:layout_height="wrap_content"
        android:padding="@dimen/row_padding"
        android:src="@drawable/ic_done"
        android:layout_marginTop="@dimen/row_height"
        android:layout_marginStart="@dimen/row_padding"
        android:layout_marginEnd="@dimen/row_padding"
        android:layout_marginBottom="@dimen/row_padding"
        android:layout_below="@+id/chk_airplane_new"
        android:layout_alignParentStart="true"
        android:elevation="@dimen/elevation_8"/>

</RelativeLayout>