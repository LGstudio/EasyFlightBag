<resources>

    <!-- Base application theme. LIGHT -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/colorPrimaryDark</item>

        <item name="primaryColor">@color/colorPrimary</item>
        <item name="primaryColorDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorBlue</item>
        <item name="colorControlNormal">@color/colorPrimaryLight</item>
        <item name="colorControlActivated" >@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorBlueLight</item>

        <item name="primaryTextColor">@color/colorBlack</item>
        <item name="secondaryTextColor">@color/colorDark</item>
        <item name="fadedTextColor">@color/colorGray</item>
        <item name="dividerColor">@color/colorPrimaryLight</item>
        <item name="highlightColor">@color/colorWhite</item>
        <item name="backgroundColor">@color/colorWhite</item>
        <item name="backgroundDarkColor">@color/colorLighter</item>
        <item name="backgroundColorHighlightLight">@color/colorBlueLight</item>
        <item name="backgroundColorHighlight">@color/colorBlue</item>
        <item name="backgroundSnackbar">@color/colorGray</item>
        <item name="backgroundSelected">@color/colorPrimarySelectLight</item>
        <item name="greenColor">@color/colorGreen</item>
        <item name="redColor">@color/colorRed</item>
        <item name="orangeColor">@color/colorOrange</item>
    </style>

    <!-- Base application theme. DARK -->
    <style name="AppThemeDark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDarker</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/colorPrimaryDarker</item>

        <item name="primaryColor">@color/colorPrimaryDark</item>
        <item name="primaryColorDark">@color/colorPrimaryDarker</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorPrimaryDarker</item>
        <item name="colorControlActivated" >@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorDarker</item>

        <item name="primaryTextColor">@color/colorLight</item>
        <item name="secondaryTextColor">@color/colorGray</item>
        <item name="fadedTextColor">@color/colorDark</item>
        <item name="dividerColor">@color/colorPrimaryDark</item>
        <item name="highlightColor">@color/colorLight</item>
        <item name="backgroundColor">@color/colorDark</item>
        <item name="backgroundDarkColor">@color/colorDarker</item>
        <item name="backgroundColorHighlightLight">@color/colorPrimaryDark</item>
        <item name="backgroundColorHighlight">@color/colorPrimary</item>
        <item name="backgroundSnackbar">@color/colorDark</item>
        <item name="backgroundSelected">@color/colorPrimarySelectDark</item>
        <item name="greenColor">@color/colorGreenDark</item>
        <item name="redColor">@color/colorRedDark</item>
        <item name="orangeColor">@color/colorOrangeDark</item>

    </style>

    <!-- ====================================================================== -->

    <style name="FullScreenDialog">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>

        <item name="android:windowBackground">?attr/backgroundColor</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="CalculatorLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">@dimen/tab_padding</item>
        <item name="android:paddingBottom">@dimen/tab_padding</item>
        <item name="android:weightSum">1</item>
    </style>

    <style name="Calculator_edit_text_field">
        <item name="android:padding">@dimen/calc_field_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/backgroundColor</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:elevation">@dimen/elevation_4</item>
        <item name="android:textSize">@dimen/calc_text_size</item>
        <item name="android:layout_margin">@dimen/calc_field_margin</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:inputType">numberSigned|numberDecimal</item>
        <item name="android:state_focused">false</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:textColorHighlight">?attr/backgroundColorHighlightLight</item>
    </style>

    <style name="Calculator_text_unit">
        <item name="android:paddingTop">@dimen/calc_field_padding</item>
        <item name="android:paddingBottom">@dimen/calc_field_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/calc_text_size</item>
        <item name="android:layout_margin">@dimen/calc_field_margin</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Calculator_button_unit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/calc_text_size</item>
        <item name="android:layout_margin">@dimen/calc_field_button_margin</item>
        <item name="android:textColor">?attr/highlightColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?attr/backgroundColorHighlight</item>
    </style>

    <style name="Menu_icon_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/bck_transparent</item>
        <item name="android:paddingLeft">@dimen/tab_padding_side</item>
        <item name="android:paddingRight">@dimen/tab_padding_side</item>
        <item name="android:paddingTop">@dimen/tab_padding</item>
        <item name="android:paddingBottom">@dimen/tab_padding</item>
        <item name="android:minWidth">@dimen/tab_min_w</item>
    </style>

    <style name="Airplane_editor_table_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/row_padding</item>
        <item name="android:layout_marginEnd">@dimen/row_padding</item>
        <item name="android:layout_marginTop">@dimen/row_padding</item>
        <item name="android:elevation">@dimen/elevation_4</item>
        <item name="android:padding">@dimen/row_padding</item>
        <item name="android:background">?attr/backgroundColor</item>
    </style>

    <style name="Airplane_editor_table_row_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">@dimen/row_divider</item>
    </style>

    <style name="Block_title_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/row_big_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">?attr/secondaryTextColor</item>
    </style>

    <style name="Block_title_text_style.inSettings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/row_padding</item>
        <item name="android:layout_marginEnd">@dimen/row_padding</item>
        <item name="android:elevation">@dimen/elevation_8</item>
        <item name="android:padding">@dimen/row_padding</item>
        <item name="android:background">?attr/backgroundColor</item>
    </style>

    <style name="Block_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">@dimen/row_padding</item>
    </style>

    <style name="Block_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/backgroundColorHighlightLight</item>
        <item name="android:layout_weight">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/row_padding</item>
    </style>

    <style name="Block_edit_text_number_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:padding">@dimen/row_padding</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="Block_edit_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:layout_weight">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">@dimen/row_padding</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="NumberPickerStyle">
        <item name="android:divider">?attr/primaryColor</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="NumberPickerStyleText">
        <item name="android:textColorPrimary">?attr/primaryTextColor</item>
    </style>

    <style name="Side_menu_category">
        <item name="android:layout_height">@dimen/row_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?attr/primaryColor</item>
        <item name="android:textColor">?attr/highlightColor</item>
        <item name="android:padding">@dimen/row_padding</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:elevation">@dimen/elevation_4</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Side_menu_text">
        <item name="android:layout_height">@dimen/row_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:padding">@dimen/row_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Side_menu_text.big">
        <item name="android:layout_height">@dimen/row_big_height</item>
    </style>

</resources>
